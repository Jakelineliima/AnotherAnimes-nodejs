<div class="container_salvos">
  {{!-- {{#each user}}

  <p><strong>{{nome}}</strong></p>

  {{else}}
  <option value="0">Nenhuma user</option>
  {{/each}} --}}
  <h1>Veja seus animes salvos</h1>
  {{#each salvos}}

  <div class="card_salvo">
    {{!-- <p>usuario - {{usuario}}</p> --}}
    <div class="card_body">
      <div class="card_img">
        <img src="{{imagem}}" />
      </div>
      <div class="card_conteudo">
        <p><strong>Título</strong> - {{titulo}} </p>
        <p><strong>Temporada</strong> - {{temporada}}</p>
        <p><strong>Episódio</strong> - {{episodio}} </p>

      </div>

      <div class="btn_edits">
        <a href="/salvo/salvos/edit/{{_id}}"><button class="btn_edit_salvo" type="submit">Editar</button>
        </a>
        <form action="/salvo/salvos/deletar" method="POST">
          <input type="hidden" name="id" value="{{_id}}" />
          <button class="btn_delete_salvo" type="submit">Excluir</button>
        </form>
      </div>
    </div>
  </div>

  <div class="btn_add_flutuante">

    <a href="/salvo/adicionar"><button type="button" class="btn btnadd"></button></a>

  </div>

  {{else}}
<div class="txt_sem_itens">
    <p class="txt_add">Nenhum item salvo, que tal adicionar?</p>
  <div class="alinhabtn">
    <button type="button" class="btn btn_add_novo">
      <a href="/salvo/adicionar">adicionar novo</a></button>
  </div>
</div>
  {{/each}}


</div>